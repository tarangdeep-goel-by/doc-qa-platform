# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# API Config
API_HOST=0.0.0.0
API_PORT=8000

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Paths
DATA_DIR=data
UPLOAD_DIR=data/uploads

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIM=384

# Chunking
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# RAG
TOP_K_RESULTS=5

# RAG Improvements
USE_HYBRID_SEARCH=true
HYBRID_ALPHA=0.5  # 0=all keyword, 1=all semantic, 0.5=balanced
USE_RERANKING=true
MIN_CONFIDENCE_SCORE=0.3  # Minimum score threshold (0-1)

# Query Expansion (NEW - improves recall by 15-25%)
USE_QUERY_EXPANSION=false  # Generate alternative query phrasings
QUERY_EXPANSION_VARIANTS=2  # Number of alternative phrasings to generate
QUERY_EXPANSION_WEIGHT=2.0  # Weight for original query (vs 1.0 for variants)

# Reciprocal Rank Fusion (NEW - more robust hybrid search)
USE_RRF=true  # Use RRF instead of weighted score fusion
RRF_K_PARAMETER=60  # RRF constant (typical range: 10-100)
RRF_TOP_BONUSES=0.05,0.02,0.02  # Position bonuses for top-3 results

# Reranker Configuration
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANKER_BLENDING=position_aware  # "position_aware" or "replace"
# Position-aware: Top-3 get 75% retrieval weight, ranks 4-10 get 50%, 11+ get 25%

# BM25 Configuration
BM25_CACHE_DIR=data/bm25
