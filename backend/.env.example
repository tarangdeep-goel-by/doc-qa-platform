# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# API Config
API_HOST=0.0.0.0
API_PORT=8000

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Paths
DATA_DIR=data
UPLOAD_DIR=data/uploads

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIM=384

# Chunking
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# RAG
TOP_K_RESULTS=5

# RAG Improvements
USE_HYBRID_SEARCH=true
HYBRID_ALPHA=0.5  # 0=all keyword, 1=all semantic, 0.5=balanced
USE_RERANKING=true
MIN_CONFIDENCE_SCORE=0.3  # Minimum score threshold (0-1)

# BM25 Configuration
BM25_CACHE_DIR=data/bm25

# Reranker Model
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
